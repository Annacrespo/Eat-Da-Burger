<div class="container-fluid">
  <div class="container">

    <div class="header">
      <img src="../public/assets/css/images/burger.png" width="150px" id="burgerImg">
      <h2>Burgers!</h2>
    </div>
    <ul>
      {{#each burgers}} {{#unless this.devoured}}
      <li>
        {{this.id}} {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit" class="btn btn-success">DEVOUR!</button>
        </form>
      </li>
      {{/unless}} {{/each}}
    </ul>
    </div>

    <div class="devoured">
      <h2>Burgers that are devoured!</h2>
      <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
          {{this.id}} {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
      </ul>
      <div>

        <h2>Add a Different Burger</h2>
        <form class="create-update-form" action="/" method="POST">

          <div class="form-group">
            <input type="text" id="ca" name="burger_name">
          </div>

          <button type="submit">Add burger</button>
        </form>